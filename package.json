{
  "name": "dungeon",
  "version": "0.1.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/halftheopposite/dungeon"
  },
  "author": {
    "name": "Aymeric Chauvin",
    "url": "https://halftheopposite.dev"
  },
  "license": "MIT",
  "scripts": {
    "build:edit": "esbuild src/server/edit/index.tsx --define:process.env.NODE_ENV=\\\"development\\\" --bundle --sourcemap --outfile=src/server/edit/public/script.js",
    "build:generate": "esbuild src/server/generate/index.ts --bundle --loader:.png=base64 --sourcemap --outfile=src/server/generate/public/script.js",
    "build": "yarn run build:edit && yarn run build:generate",
    "start": "nodemon --watch \"src/**\" --ext \"ts,tsx,json,html\" --ignore \"src/**/*.spec.ts\" --exec \"yarn run build && ts-node src/server/index.ts\"",
    "test:build": "esbuild src/debug/src/index.tsx --define:process.env.NODE_ENV=\\\"development\\\" --bundle --outfile=src/debug/public/script.js",
    "test:start": "nodemon --watch \"src/**\" --ext \"ts,tsx,json,html\" --ignore \"src/**/*.spec.ts\" --exec \"yarn run test:build && ts-node src/debug/server.ts\""
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/reach__router": "^1.3.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "esbuild": "^0.8.11",
    "express": "^4.17.1",
    "nodemon": "^2.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@reach/router": "^1.3.4",
    "pixi.js": "^5.3.6"
  }
}
